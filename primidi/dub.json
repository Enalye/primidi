{
	"name": "primidi",
	"description": "Simple midi renderer",
	"copyright": "Copyright Â© 2016, Enalye",
	"authors": ["Enalye"],
	"dependencies": {
		"grimoire": {
            "version": "~master",
            "path": "../grimoire"
		},
		"atelier": {
            "version": "~master",
            "path": "../atelier"
		},
        "minuit": {
			"version": "~master",
			"path": "../minuit"
		}
	},
	"targetName": "primidi",
	"targetType": "executable",
	"workingDirectory": "..",
	"buildTypes": {
		"unittest": {
			"buildOptions": ["unittests", "debugMode", "debugInfo"]
		},
		"debug": {
			"buildOptions": ["debugMode", "debugInfo"]
		},
		"release": {
			"buildOptions": ["releaseMode", "optimize", "inline", "noBoundsCheck"]
		}
	},
	"configurations": [
		{
			"name": "linux-build",
			"platforms": ["linux"],
			"targetPath": "../bin",
			"postBuildCommands": [
				"cp ../lib$ARCH/*.dll ../bin"
			]
		},
		{
			"name": "windows-build",
			"platforms": ["windows"],
			"targetPath": "../bin",
			"postBuildCommands": [
				"copy ..\\lib$ARCH\\*.dll ..\\bin"
			]
		},
		{
			"name": "windows-release",
			"platforms": ["windows"],
			"targetPath": "../bin",
			"lflags":[
				"-subsystem:windows",
				"-entry:mainCRTStartup"
			],
			"postBuildCommands": [
				"copy ..\\lib$ARCH\\*.dll ..\\bin"
			]
		}
	]
}
